<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zudio Carousel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</head>
<style>
    body {
        background-color: black !important;
    }

    .butn {
        height: 15px !important;
        width: 15px !important;
        border-radius: 50% !important;
    }

    .main-bdy {
        background-color: white;
        height: 90.5vh;
    }
    
    .sm-div {
        height: 100%;
        display: none;
    }

    .responsive-img {
        height: 90vh;
    }
     .main-img{
        height: 70vh ;
    } 
     @media (max-width:830px) {
       .main-img{
        height: 50vh;
       }
       
    }

    @media (max-width:600px) {
        .sm-div {
            display: block;
        }

        .big-scrn {
            display: none;
        }
    }
</style>

<body>
 <%- include('../navbar') %>
        <%- include('../side-bar-with-btns') %>
     
        <div class="main-bdy">
            <div id="myCarousel" class="carousel slide carousel-fade big-scrn" data-bs-ride="carousel">

                <div class="carousel-indicators d-flex align-content-end justify-content-end">
                    <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active butn" aria-current aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" class="butn" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" class="butn" aria-label="Slide 3"></button>
                    <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="3" class="butn" aria-label="Slide 4"></button>
                </div>


                <div class="carousel-inner cr">
                    <div class="carousel-item  active">
                        <img src="/New folder/z-stories.webp" class="d-block w-100 main-img">
                    </div>
                    <div class="carousel-item">
                        <img src="/New folder/2.webp" class="d-block w-100 main-img">
                    </div>
                    <div class="carousel-item">
                        <img src="/New folder/3.webp" class="d-block w-100 main-img">
                    </div>
                    <div class="carousel-item">
                        <img src="/New folder/4.webp" class="d-block w-100 main-img">
                    </div>
                </div>

            </div>

            <div id="myCarouselSmall" class="carousel slide carousel-fade sm-div" data-bs-ride="carousel">

                <div class="carousel-indicators d-flex align-content-end justify-content-end">
                    <button type="button" data-bs-target="#myCarouselSmall" data-bs-slide-to="0" class="active butn" aria-current aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#myCarouselSmall" data-bs-slide-to="1" class="butn" aria-label="Slide 2"></button>
                </div>


                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/zudio/zsro.webp" class="d-block w-100 responsive-img">
                    </div>
                    <div class="carousel-item">
                        <img src="/zudio/res2.webp" class="d-block w-100 responsive-img">
                    </div>
                </div>
            </div>
        </div>
        <%- include('../alert') %>
</body>

</html>