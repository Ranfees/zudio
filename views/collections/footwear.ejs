<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zudio Carousel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</head>
<style>
    body {
        background-color: black !important;
    }

    .butn {
        height: 15px !important;
        width: 15px !important;
        border-radius: 50% !important;
    }

    .main-bdy {
        background-color: black;
        height: 90.5vh;
    }

    .sm-div {
        height: 100%;
        display: none;
    }

    .responsive-img {
        height: 90vh;
    }

    @media (max-width:600px) {
        .sm-div {
            display: block;
        }

        .big-scrn {
            display: none;
        }
    }
</style>

<body>
   <%- include('../navbar') %>
        <%- include('../side-bar-with-btns') %>

            <div class="main-bdy">
                <div id="myCarousel" class="carousel slide carousel-fade big-scrn" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item  active">
                            <img src="/footware/AW_FS_web_banners-20_1950x.jpg" class="d-block w-100">
                        </div>
                    </div>

                </div>
                <div id="myCarousel" class="carousel slide carousel-fade sm-div" data-bs-ride="carousel">

                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/footware/r1.webp" class="d-block w-100 responsive-img">
                        </div>
                    </div>
                </div>
            </div>
            <%- include('../alert') %>
</body>

</html>